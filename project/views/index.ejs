<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore - My Photo Gallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>
    <script src="/frontEndjs/carousel.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/imagesloaded/4.1.4/imagesloaded.pkgd.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var grid = document.querySelector('.masonry-grid');
    imagesLoaded(grid, function() {
        new Masonry(grid, {
            itemSelector: '.masonry-grid-item',
            columnWidth: '.masonry-grid-item',
            percentPosition: true
        });
    });
});
</script>
    

    
</head>
<body class="main_body bg-dark text-white">
    <%- include('headers/header') %> 

    <% if (flash) { %>
      <div class="alert alert-<%-flash.type%>">
         <%= flash.message %>
     </div>
     <% } %>

    <main>
      <% if (page === 'home' || page === '') { %>
          <%- include('home') %>
      <% } else if (page === 'explore') { %>
          <%- include('explore') %>
      <% } else if (page === 'upload') { %>
          <%- include('upload') %>
      <% } else if (page === 'addcategory') { %>
          <%- include('addcategory') %>
      <% } else if (page === 'login') { %>
          <%- include('login') %>
      <% } else if (page === 'search') { %>
        <%- include('search') %>
      <% } else if (page === 'register') { %>
          <%- include('register') %>
      <% } else if (page === 'categories') { %>
          <%- include('categories', {categories: categories}) %>
      <% } else if (page === 'result') { %>
          <%- include('result', { wallpaper: wallpaper }) %>
      <% } %>
  </main>

    <%- include('footers/footer') %>


    </body>
</html>
